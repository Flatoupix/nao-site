{% extends "layout.html.twig" %}

{% block body %}

    <h2>Se connecter</h2>
    {% if error %}
        <div class="alert alert-danger"> {{ error.message }} </div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post" class="login">
        <div class="form-group row">
            <label for="username" class="col-xs-5 control-label label_contact">Nom d'utilisateur :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"
                   class="formulaire_contact col-xs-6"/>
        </div>
        <div class="form-group row">
            <label for="password" class="col-xs-5 control-label label_contact">Mot de passe :</label>
            <input type="password" id="password" name="_password" class="formulaire_contact col-xs-6"/>
        </div>

        <input type="submit" value="Se connecter" class="btn envoyer_formulaire col-xs-offset-5"/>
    </form>

{% endblock %}