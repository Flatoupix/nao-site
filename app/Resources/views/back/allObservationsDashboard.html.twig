{% extends "back-layout.html.twig" %}

{% set couleurs = {
'A valider': 'black',
'Validée': '#519D9E',
'A modifier': 'green',
'Signalée': 'orange',
'Supprimée': 'red'
} %}

{% block content %}



    <h4>Mes observations</h4>


    <div class="col-xs-3 recherche">
        <div class="input-group input-group-md">
            <input type="text" class="form-control" placeholder="Recherche" style="border:0;">
                <span class="input-group-addon" style="border:0; background: white;">
                    <span class=" glyphicon glyphicon-search"></span></span>
        </div>
    </div>


    <div class="tableau">

        <table class="table">
            <thead>
            <tr>
                <th>Utilisateur</th>
                <th>Statut</th>
                <th>Observation</th>
                <th>Date</th>
                <th>Validateur</th>
                <th class="tableau_action">Action</th>
            </tr>
            </thead>
            <tbody class="fond_tableau">
            {% for observation in observations %}
                <tr>
                    <td>
                        {{ observation.author.username }}
                    </td>
                    <td>
                        <span style="color: {{ couleurs[observation.status] }}">{{ observation.status }}</span>
                    </td>

                    <td class="content_observation">
                        <div class="tableau_observation">
                            <a href="{{ path('observation', {'id': observation.id}) }}">{{ observation.content | truncate(50) |raw }}</a>
                        </div>
                    </td>

                    <td>
                        {{ observation.date | date('d-m-Y') }}
                    </td>
                    <td>

                    </td>
                    <td class="tableau_action action">
                        {% if  observation.status ==  constant('AppBundle\\Entity\\Observation::VALIDEE') %}
                            <span class=" glyphicon glyphicon glyphicon-ok icone" title="Observation publiée"></span>
                        {% elseif observation.status ==  constant('AppBundle\\Entity\\Observation::SUPPRIMEE')   %}
                            <span class=" glyphicon glyphicon glyphicon-trash icone"
                                  title="Supprimer le commentaire"></span>
                        {% else %}
                            <a  href="{{ path('observation', {'id': observation.id}) }}"><span class=" glyphicon glyphicon-eye-open icone" title="Voir l'observation"></span></a>
                            <span class=" glyphicon glyphicon-pencil icone" title="Modifier l'observation"></span>
                            <span class=" glyphicon glyphicon glyphicon-trash icone" title="Supprimer l'observation"></span>
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}