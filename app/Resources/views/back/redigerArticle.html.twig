{% extends "layout.html.twig" %}

{% block body %}

    <h4 class="titre_article">RÃ©diger un article</h4>

<div style="background-color: #9DC8C8;
    color: white;
    padding: 23px">{{ form_start(form) }}
	{{ form_errors(form) }}

	<div class="row" >
		<div class="col-sm-6 col-xs-12">
			{{ form_row(form.title) }}
		</div>
			<div class="col-sm-6 col-xs-12 file">
		{{ form_row (form.file) }}
			</div>
	</div>
    {{ form_row(form.content, {'id' : 'summernote'}) }}
	<div class="col-lg-offset-11 col-md-offset-10 col-sm-offset-10 col-xs-offset-8">
    {{ form_row(form.enregistrer) }}
</div>
{{ form_end(form) }}
</div>
    <p>
        <a href="{{ path('dashboard_utilisateurs') }}" class="btn btn-default btn envoyer_formulaire btn">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour au tableau de bord
        </a>
    </p>

{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script type="text/javascript">
		$(document).ready(function() {
	  		$('#summernote').summernote({
	  			height: 300,                 // set editor height
	  			minHeight: null,             // set minimum height of editor
	  			maxHeight: null,             // set maximum height of editor
	  			focus: true                  // set focus to editable area after initializing summernote
			});
		});
	</script>

{% endblock %}
