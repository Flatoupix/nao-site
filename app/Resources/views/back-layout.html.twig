            <li class=" {% if app.request.attributes.get('_route') == 'dashboard_all_articles' and app.request.query.get('only-me') == NULL %} color {% endif %}">
                <a href="{{ path('dashboard_all_articles') }}">Gestion des articles</a><span class="nb">{#{{ nbArticles  }}#}</span>
            </li>
            <li class=" {% if app.request.attributes.get('_route') == 'dashboard_utilisateurs' %} color {% endif %}">
                <a href="{{ path('dashboard_utilisateurs') }}"> Gestion des utilisateurs</a><span class="nb">{#{{ nbUsers  }}#}</span>
            </li>
            <li class=" {% if app.request.attributes.get('_route') == 'dashboard_redigerArticle' %} color {% endif %}">
