{% extends "layout.html.twig" %}

{% block body %}

    <div class="col-sm-3 dashboard">
        <h5>Tableau de bord</h5>

        <ul class="menu_dashboard">
            <li class=" {% if app.request.attributes.get('_route') == 'dashboard_profil' %} color {% endif %}">
                <a href="{{ path('dashboard_profil') }}">Profil</a>
            </li>
            <li class=" {% if app.request.attributes.get('_route') == 'dashboard_observations' %} color {% endif %}">
            <a href="{{ path('dashboard_observations') }}">Mes observations {#{{ nbObservations }}#} </a>
